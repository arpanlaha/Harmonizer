{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/static-build"
    }
  ],
  "build": {
    "env": {
      "GATSBY_TELEMETRY_DISABLED": "1",
      "BACKEND_URL": "https://harmonizer.azurewebsites.net/"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/logo.svg"
    },
    {
      "src": "^((?!robots.txt).)*$",
      "status": 308,
      "headers": { "Location": "https://arpanlaha.com/page-not-found" }
    }
  ]
}
